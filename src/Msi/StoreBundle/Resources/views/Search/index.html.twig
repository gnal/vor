{% extends 'ThaCoreBundle::layout.html.twig' %}

{% block content %}
<h2><span>Search</span></h2>
<form class="form-inline" method="GET" action="{{ path('msi_store_search_index') }}">
    <div class="form-group">
        <div class="input-group">
            <input name="q" class="typeahead form-control" type="text" data-provide="typeahead" autocomplete="off">
            <span class="input-group-btn">
                <button class="btn btn-default" type=submit><i class="icon-large icon-search"></i></button>
            </span>
        </div>
    </div>
</form>
{% endblock %}

{% block js %}
{{ parent() }}
<script src="{{ asset('bundles/msiadmin/vendor/typeahead/typeahead.min.js') }}"></script>
<script>
(function($) {
    "use strict";
    $('.typeahead').typeahead({
        local: {{ typeahead|raw }},
        limit: 10
    });
})(jQuery);
</script>
{% endblock %}
