{% block form_widget_simple %}
{% spaceless %}
    {% set type = type|default('text') %}
    <input{% if form_errors(form)|length %} class="error" data-content="{{ form_errors(form) }}"{% endif %} type="{{ type }}" {{ block('widget_attributes') }} {% if value is not empty %}value="{{ value }}" {% endif %}/>
{% endspaceless %}
{% endblock form_widget_simple %}
