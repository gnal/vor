{% extends 'MsiAdminBundle:Page:layout.html.twig' %}

{% block css %}
<link href="{{ asset('bundles/msiadmin/vendor/bootstrap/css/bootstrap.css') }}" rel="stylesheet">
<link href="{{ asset('bundles/msiadmin/vendor/font-awesome/css/font-awesome.css') }}" rel="stylesheet">
{#<link href='http://fonts.googleapis.com/css?family=Open+Sans:400,700' rel='stylesheet' type='text/css'>#}
<link rel="stylesheet" href="{{ asset('bundles/msiadmin/css/base.css') }}">
<link rel="stylesheet" href="{{ asset('bundles/vorcore/css/style.css') }}">
{{ parent() }}
{% endblock %}

{% block body %}
<div class="container">
    <div class="wrapper">
        <div class="header">
            <p><a href="{{ path('homepage') }}"><img src="{{ asset('uploads/images/logo.png') }}" alt="0"></a></p>
            <nav class="navbar navbar-default navbar-inverse" style="margin-bottom: 0;">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        </button>
                </div>
                <div class="collapse navbar-collapse navbar-ex1-collapse">
                    {{ knp_menu_render('VorCoreBundle:MenuBuilder:mainMenu', {'allow_safe_labels': true, 'depth': 3, 'currentClass': 'active'}) }}
                    <form class="navbar-form navbar-right">
                        <div class="form-group">
                            <input type="text" class="form-control" placeholder="Search">
                        </div>
                        <button type="submit" class="btn btn-metal"><span class="icon-search icon-large"></span></button>
                    </form>
                </div>
            </nav>
        </div>
        <div class="content">
            <div class="inner">
                <h2>{{ block('title') }}</h2>
                {% if block('sidebar') %}
                    <div class="row">
                        <div class="col-md-8">
                            {{ block('page_content') }}
                        </div>
                        <div class="col-md-4">
                            <div class="sidebar well well-sm">
                                {{ block('sidebar') }}
                            </div>
                        </div>
                    </div>
                {% else %}
                    {{ block('page_content') }}
                {% endif %}
            </div>
        </div>
        <div class="footer">
            <div class="inner">
                <small>&copy; {{ 'now'|date('Y') }} O.M.U. IMPORT/EXPORT</small>
            </div>
        </div>
    </div>
</div>
{% endblock body %}

{% block js %}
{#<script src="//ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>#}
{#<script src="//ajax.googleapis.com/ajax/libs/jqueryui/1.10.0/jquery-ui.min.js"></script>#}
<script src="{{ asset('bundles/msiadmin/vendor/hinclude/hinclude.js') }}"></script>
<script src="{{ asset('bundles/msiadmin/vendor/bootstrap/js/bootstrap.js') }}"></script>
{% endblock %}
